<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- autowire="byName"-->
    <bean id="employee"
          name="edwinxu"
          class="com.example.springlearning.bean.lifecycle.demo01.Employee"
          init-method="initMethod"
          lazy-init="true"
          scope="prototype"

          destroy-method="destroyMethod"
        >
        <!--constructor-->
        <constructor-arg name="name" value="Edwin Xu"/>
        <constructor-arg name="id" value="1"/>

        <!--setter-->
        <property name="id" value="2"/>
    </bean>

    <bean id="myPostProcessor2" class="com.example.springlearning.bean.lifecycle.demo01.MyBeanPostProcessor2"/>
    <bean id="myPostProcessor" class="com.example.springlearning.bean.lifecycle.demo01.MyBeanPostProcessor"/>



    <!-- BeanFactoryPostProcessor   don't work ,why ? -->
    <bean id="beanFactoryPostProcessor" class="com.example.springlearning.bean.lifecycle.demo01.MyFactoryPostProcessor"/>

</beans>